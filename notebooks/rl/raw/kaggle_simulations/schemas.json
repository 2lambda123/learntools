{
  "specification": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "name": {
        "type": "string",
        "default": ""
      },
      "title": {
        "type": "string",
        "default": ""
      },
      "version": {
        "type": "string",
        "default": ""
      },
      "description": {
        "type": "string",
        "default": ""
      },
      "configuration": {
        "type": "object",
        "default": {}
      },
      "max_steps": {
        "type": "integer",
        "minimum": 1,
        "default": 10000
      },
      "agents": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "minimum": { "type": "integer", "default": 0 },
          "maximum": { "type": "integer" },
          "defaults": { "type": "object", "default": {} }
        },
        "default": {}
      },
      "reward": {
        "type": "object",
        "default": { "type": "number", "default": 0 }
      },
      "info": {
        "type": "object",
        "default": {}
      },
      "observation": {
        "type": "object",
        "default": {}
      },
      "action": {
        "type": "object",
        "default": { "type": "integer", "default": 0 }
      }
    }
  },
  "state": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "action": {
        "description": "Value returned from the agent based on the observation.",
        "type": "integer",
        "default": 0
      },
      "reward": {
        "description": "Reward generated by agent action(s).",
        "type": "number",
        "default": 0
      },
      "info": {
        "description": "Additional infomation; not available for evaluation.",
        "type": "object",
        "default": {}
      },
      "observation": {
        "description": "Observation to create an action based upon.",
        "type": "object",
        "default": {}
      },
      "done": {
        "description": "Notify the environment the agent cannot proceed.",
        "type": "boolean",
        "default": false
      }
    }
  }
}
