{
  "name": "nacl",
  "title": "NaCL",
  "description": "The game of mineral salt.",
  "version": "1.0.0",
  "agents": [1, 2, 4],
  "max_steps": 500,
  "configuration": {
    "halite": {
      "description": "The starting amount of halite available on the board.",
      "type": "integer",
      "default": 300000
    },
    "size": {
      "description": "The number of cells vertically and horizontally on the board.",
      "type": "integer",
      "default": 32,
      "minimum": 2
    },
    "spawn_cost": {
      "description": "The amount of halite to spawn a new ship.",
      "type": "integer",
      "default": 1000,
      "minimum": 0
    },
    "convert_cost": {
      "description": "The amount of halite to convert a ship into a dropoff.",
      "type": "integer",
      "default": 4000,
      "minimum": 0
    },
    "move_cost": {
      "description": "The percent deducted from ship's current halite per move.",
      "type": "number",
      "default": 0.1,
      "minimum": 0
    },
    "collect_rate": {
      "description": "The rate of halite gained from by a ship remaining still.",
      "type": "number",
      "default": 0.25,
      "minimum": 0
    },
    "regen_rate": {
      "description": "The rate halite regenerate within a cell.",
      "type": "number",
      "default": 0.1,
      "minimum": 0
    },
    "regen_threshold": {
      "description": "The minimum halite required for a cell to regenerate.",
      "type": "integer",
      "default": 50,
      "minimum": 0
    }
  },
  "reward": {
    "description": "The amount of halite.",
    "type": "integer",
    "default": 5000,
    "minimum": 0
  },
  "observation": {
    "board": {
      "description": "Serialized cells (width x height).",
      "type": "array",
      "items": {
        "type": "array",
        "items": [
          {
            "description": "Halite: The amount present in the cell.",
            "type": "integer",
            "default": 0,
            "minimum": 0
          },
          {
            "description": "Shipyard: Player id. -1 if none present.",
            "type": "integer",
            "default": -1
          },
          {
            "description": "Dropoff: Player id. -1 if none present.",
            "type": "integer",
            "default": -1
          },
          {
            "description": "Ship: Player id. -1 if none present.",
            "type": "integer",
            "default": -1
          },
          {
            "description": "Ship Halite: The amount present in a ship.",
            "type": "integer",
            "default": 0,
            "minimum": 0
          }
        ]
      },
      "default": [0, -1, -1, -1]
    },
    "player": {
      "description": "The player id.",
      "type": "integer"
    }
  },
  "action": {
    "description": "Actions taken per cell.",
    "type": "array",
    "items": {
      "type": "array",
      "items": [
        {
          "description": "The cell this action is taken in.",
          "type": "integer"
        },
        {
          "description": "The action to take in this cell.",
          "enum": ["CONVERT", "SPAWN", "NORTH", "SOUTH", "EAST", "WEST"]
        }
      ]
    },
    "default": []
  },
  "reset": {
    "status": "ACTIVE",
    "observation": [
      { "player": 0 },
      { "player": 1 },
      { "player": 2 },
      { "player": 3 }
    ]
  }
}
